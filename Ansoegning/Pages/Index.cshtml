@page 
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<a class="btn btn-success mb-1" data-toggle="modal" data-target="#newUserModal">Ny Bruger</a>
<table class="table table-striped table-dark">
    <tr>
        <td>ID</td>
        <td>Navn</td>
        <td>Alder</td>
        <td>Køn</td>
        <td></td>
    </tr>
    <tbody>
        @foreach (var user in Model.users)
        {
        <tr>
            <td>@user.ID</td>
            <td>@user.name</td>
            <td>@user.age</td>
            <td>@user.gender</td>
            @*<td><a class="btn btn-info" data-toggle="modal" data-target="#updateUserModal" asp-page-handler="getUpdateUser">Rediger</a></td>*@

            <td><a class="btn btn-info"  data-toggle="modal" data-target="#updateUserModal" onclick="@(Model.getUpdateUser(user.ID))">Rediger</a></td>
        </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="newUserModal" tabindex="-1" role="dialog" aria-labelledby="newUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newUserModalLabel">Opret ny Bruger</h5>
            </div>
            <form asp-page-handler="newUser" method="post">
                <div class="modal-body row">
                    <div class="col-md-6">
                        <label for="id">ID</label>
                        <input readonly id="id" value="@Model.newUser.ID" class="form-control" type="number" />
                    </div>
                    <div class="col-md-6">
                        <label for="name">Navn</label>
                        <input id="UserFirstAndLastname" value="@Model.newUser.name" class="form-control" type="text" />
                    </div>
                </div>
                <div class="modal-body">
                    <div class=" row">
                        <div class="col-md-6">
                            <label for="age">Alder</label>
                            <input id="Age" value="@Model.newUser.age" class="form-control" type="number" />
                        </div>
                        <div class="col-md-6">
                            <label for="permission">Gruppe</label>
                            <select class="form-control col-md-12" id="permission" name="user.PermissionID">
                                @foreach (var Gender in Enum.GetValues(typeof(DataLayer.Models.Gender)))
                                {
                                    <option value="@Gender">@Gender</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Luk</button>
                    <button type="submit" class="btn btn-success col-2 offset-5 text-white">Opdater</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="updateUserModal" tabindex="-1" role="dialog" aria-labelledby="updateUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateUserModalLabel">Rediger Bruger</h5>
            </div>
            <form asp-page-handler="updateUser" method="post">
                <div class="modal-body row">
                    <div class="col-md-6">
                        <label for="id">ID</label>
                        <input readonly id="id" value="@Model.editUser.ID" class="form-control" type="number" />
                    </div>
                    <div class="col-md-6">
                        <label for="name">Navn</label>
                        <input id="UserFirstAndLastname" value="@Model.editUser.name" class="form-control" type="text" />
                    </div>
                </div>
                <div class="modal-body">
                    <div class=" row">
                        <div class="col-md-6">
                            <label for="age">Alder</label>
                            <input id="Age" value="@Model.editUser.age" class="form-control" type="number" />
                        </div>
                        <div class="col-md-6">
                            <label for="permission">Køn</label>
                            <select class="form-control col-md-12" id="permission" name="user.PermissionID">
                                <option hidden value="@Model.editUser.gender">@Model.editUser.gender</option>
                                @foreach (var Gender in Enum.GetValues(typeof(DataLayer.Models.Gender)))
                                {
                                    <option value="@Model.editUser.gender">@Gender</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Anuller</button>
                    <button type="submit" class="btn btn-success col-2 offset-5 text-white">Opdater</button>
                </div>
            </form>
        </div>
    </div>
</div>
